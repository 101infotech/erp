{
  "info": {
    "name": "Brand Bird Agency - Booking Form API",
    "description": "API endpoints for Brand Flight Consultation booking form",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Public Endpoints",
      "item": [
        {
          "name": "Submit Booking Form",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Accept",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"site_slug\": \"brandbirdagency\",\n  \"first_name\": \"John\",\n  \"last_name\": \"Doe\",\n  \"email\": \"john@example.com\",\n  \"phone\": \"+1-234-567-8900\",\n  \"company_name\": \"Tech Innovations Inc.\",\n  \"website_url\": \"https://example.com\",\n  \"industry\": \"Technology & SaaS\",\n  \"services_interested\": [\n    \"Brand Strategy & Identity Development\",\n    \"Digital Marketing Campaign Creation\",\n    \"Social Media Flight Management\"\n  ],\n  \"investment_range\": \"$10,000 - $25,000\",\n  \"flight_timeline\": \"3-6 months\",\n  \"current_marketing_efforts\": \"Currently running social media campaigns and email marketing\",\n  \"marketing_goals\": \"Increase brand awareness and customer acquisition by 50% in next quarter\",\n  \"current_challenges\": \"Limited budget and struggling with consistent brand messaging\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/v1/booking",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "booking"]
            },
            "description": "Submit a brand flight consultation booking. Rate limited to 10 requests per minute."
          },
          "response": []
        }
      ]
    },
    {
      "name": "Protected Endpoints (Auth Required)",
      "item": [
        {
          "name": "Get All Bookings",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Accept",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{auth_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/v1/booking?status=new&per_page=20",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "booking"],
              "query": [
                {
                  "key": "status",
                  "value": "new",
                  "description": "Filter by status (new, contacted, scheduled, completed, cancelled)"
                },
                {
                  "key": "per_page",
                  "value": "20",
                  "description": "Items per page"
                },
                {
                  "key": "search",
                  "value": "",
                  "disabled": true,
                  "description": "Search by name, email, or company"
                },
                {
                  "key": "site_id",
                  "value": "",
                  "disabled": true,
                  "description": "Filter by site ID"
                }
              ]
            },
            "description": "Retrieve all booking submissions with filtering and pagination."
          },
          "response": []
        },
        {
          "name": "Get Single Booking",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Accept",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{auth_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/v1/booking/1",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "booking", "1"]
            },
            "description": "Get details of a specific booking by ID."
          },
          "response": []
        },
        {
          "name": "Update Booking Status",
          "request": {
            "method": "PATCH",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Accept",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{auth_token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"status\": \"contacted\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/v1/booking/1/status",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "booking", "1", "status"]
            },
            "description": "Update the status of a booking. Valid statuses: new, contacted, scheduled, completed, cancelled"
          },
          "response": []
        },
        {
          "name": "Delete Booking",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Accept",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{auth_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/v1/booking/1",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "booking", "1"]
            },
            "description": "Delete a booking by ID."
          },
          "response": []
        }
      ]
    }
  ],
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:8000",
      "type": "string"
    },
    {
      "key": "auth_token",
      "value": "YOUR_AUTH_TOKEN_HERE",
      "type": "string"
    }
  ]
}

{
  "info": {
    "name": "Saubhagya Group - Schedule Meeting API",
    "description": "API endpoints for scheduling meetings with Saubhagya Group",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Public Endpoints",
      "item": [
        {
          "name": "Submit Meeting Request",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Accept",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"full_name\": \"John Doe\",\n  \"email\": \"john@example.com\",\n  \"phone\": \"+977-9821812699\",\n  \"company\": \"ABC Corporation\",\n  \"preferred_date\": \"2025-12-25\",\n  \"preferred_time\": \"9:00 AM - 10:00 AM\",\n  \"meeting_type\": \"Partnership Discussion\",\n  \"message\": \"Looking forward to discussing partnership opportunities.\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/v1/schedule-meeting",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "schedule-meeting"]
            },
            "description": "Submit a new meeting request. Rate limited to 5 requests per minute."
          },
          "response": []
        }
      ]
    },
    {
      "name": "Protected Endpoints (Auth Required)",
      "item": [
        {
          "name": "Get All Meetings",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Accept",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{auth_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/v1/schedule-meeting?status=pending&per_page=20",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "schedule-meeting"],
              "query": [
                {
                  "key": "status",
                  "value": "pending",
                  "description": "Filter by status (pending, confirmed, completed, cancelled)"
                },
                {
                  "key": "per_page",
                  "value": "20",
                  "description": "Items per page"
                },
                {
                  "key": "site_id",
                  "value": "",
                  "disabled": true,
                  "description": "Filter by site ID"
                }
              ]
            },
            "description": "Retrieve all meeting requests with filtering and pagination."
          },
          "response": []
        },
        {
          "name": "Get Single Meeting",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Accept",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{auth_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/v1/schedule-meeting/1",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "schedule-meeting", "1"]
            },
            "description": "Get details of a specific meeting request by ID."
          },
          "response": []
        },
        {
          "name": "Update Meeting Status",
          "request": {
            "method": "PATCH",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Accept",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{auth_token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"status\": \"confirmed\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/v1/schedule-meeting/1/status",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "schedule-meeting", "1", "status"]
            },
            "description": "Update the status of a meeting request. Valid statuses: pending, confirmed, completed, cancelled"
          },
          "response": []
        },
        {
          "name": "Delete Meeting Request",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Accept",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{auth_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/v1/schedule-meeting/1",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "schedule-meeting", "1"]
            },
            "description": "Delete a meeting request by ID."
          },
          "response": []
        }
      ]
    }
  ],
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:8000",
      "type": "string"
    },
    {
      "key": "auth_token",
      "value": "YOUR_AUTH_TOKEN_HERE",
      "type": "string"
    }
  ]
}
